# Example environment file for Recommendarr
# Copy this file to .env to use these settings

# Custom port configuration
FRONTEND_PORT=8080
BACKEND_PORT=8081

# URL configuration (for local use)
PUBLIC_URL=http://localhost:8080
RUNTIME_API_URL=http://localhost:8081

# For reverse proxy setup, uncomment and modify these:
# PUBLIC_URL=https://recommendarr.yourdomain.com
# RUNTIME_API_URL=https://api.recommendarr.yourdomain.com
# BUILD_API_URL=https://api.recommendarr.yourdomain.com
# BASE_URL=/

# Other settings
NODE_ENV=production
DOCKER_ENV=true