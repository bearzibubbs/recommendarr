# Example environment file for Recommendarr
# Copy this file to .env to use these settings

# Port configuration - single port for both frontend and API
PORT=3000

# URL configuration 
PUBLIC_URL=http://localhost:3000

# For reverse proxy setup, uncomment and modify:
# PUBLIC_URL=https://recommendarr.yourdomain.com
# BASE_URL=/

# Other settings
NODE_ENV=production
DOCKER_ENV=true

# Security settings
# Uncomment to force secure cookies even over HTTP (only use if behind HTTPS reverse proxy)
# FORCE_SECURE_COOKIES=true